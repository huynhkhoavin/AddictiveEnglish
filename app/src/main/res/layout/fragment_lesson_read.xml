<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/play_lesson_control_height"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_below="@+id/img_lesson_avatar"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/btn_Read"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_32"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_8"

                android:background="@color/com_facebook_blue"
                android:text="READ"
                android:textColor="@color/WhiteText" />

            <TextView
                android:id="@+id/tv_lessonTitle"
                style="@style/NormalTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_8"
                android:text="The Adventure Of Alice" />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_lesson_avatar"
            android:layout_width="@dimen/play_lesson_image"
            android:layout_height="@dimen/play_lesson_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/demo" />
    </RelativeLayout>
</LinearLayout>
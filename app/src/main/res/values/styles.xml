<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextElevation">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="no_title" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/teal_100</item>
        <item name="colorButtonNormal">@color/teal_500</item>
    </style>

    <style name="TextAppearance44">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <style name="NormalTextAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SmallTextAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_6pt</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalTextBlack">
        <item name="android:textColor">@color/BlackText</item>
        <item name="android:textSize">@dimen/text_12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalTextWhite">
        <item name="android:textColor">@color/WhiteText</item>
        <item name="android:textSize">@dimen/text_12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SmallTextBlackBold">
        <item name="android:textColor">@color/BlackText</item>
        <item name="android:textSize">@dimen/text_6pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTextBlack">
        <item name="android:textColor">@color/BlackText</item>
        <item name="android:textSize">@dimen/text_10pt</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SmallTextBlack">
        <item name="android:textColor">@color/BlackText</item>
        <item name="android:textSize">@dimen/text_6pt</item>
    </style>
    <style name="SmallTextGrey">
        <item name="android:textColor">@color/color_silver</item>
        <item name="android:textSize">@dimen/text_6pt</item>
    </style>
    <style name="NormalTextGrey">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_12dp</item>
    </style>
    <style name="SmallTextWhite">
        <item name="android:textColor">@color/WhiteText</item>
        <item name="android:textSize">@dimen/text_6pt</item>
    </style>
    <style name="SmallBoldBlackText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_4pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalBlackText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_6pt</item>
    </style>

    <style name="ActionButtonTitle">
        <item name="android:textColor">@color/Red</item>
        <item name="android:textSize">@dimen/text_12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
    </style>
    <style name="FirebaseLoginTheme" parent="FirebaseUI">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/b3</item>
    </style>

    <style name="MailBoxCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/mail_checkbox_disable</item>
        <item name="colorControlActivated">@color/mail_checkbox_enable</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabSelectedTextColor">@color/orange</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!--<dimen name="small_text_4pt">4pt</dimen>-->
    <!--<dimen name="small_text_8pt">8pt</dimen>-->

    <style name="ButtonThemeOrange" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/Grey</item>
        <item name="colorButtonNormal">@color/orange</item>
    </style>

    <style name="ButtonThemeDisable" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/Grey</item>
        <item name="colorButtonNormal">@color/Grey</item>
    </style>

    <style name="ButtonThemeBlue" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/Grey</item>
        <item name="colorButtonNormal">@color/blue_less</item>
    </style>

    <style name="ButtonThemeGreen" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/Grey</item>
        <item name="colorButtonNormal">@color/color_green_sea</item>
    </style>

    <style name="ButtonThemeFacebookBlue" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/Grey</item>
        <item name="colorButtonNormal">@color/color_facebook</item>
    </style>

    <style name="ButtonThemeGreenTurquoise" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/Grey</item>
        <item name="colorButtonNormal">@color/color_turquoise</item>
    </style>

    <style name="ButtonThemeAlizarin" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/Grey</item>
        <item name="colorButtonNormal">@color/color_alizarin</item>
    </style>

</resources>

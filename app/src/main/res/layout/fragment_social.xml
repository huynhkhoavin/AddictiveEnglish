<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/social_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabTextColor="@color/Grey"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabMode="fixed"></android.support.design.widget.TabLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/social_ViewPager"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

        </android.support.v4.view.ViewPager>

        <android.support.design.widget.FloatingActionButton

            android:foreground="@drawable/write_with_hand"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/floatingActionButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/layout_24"
            android:layout_marginBottom="@dimen/layout_24" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:weightSum="10">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/play_lesson_control_height"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentStart="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/WhiteText"
                android:background="@color/com_facebook_blue"
                android:text="ĐỌC TOÀN BỘ"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text_12pt"
                android:textColor="@color/BlackText"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="The Adventure Of Alice"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView5" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/small_text"
                android:layout_gravity="center_horizontal"
                android:text="Chapter 02"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/play_lesson_image"
            android:layout_height="@dimen/play_lesson_image"
            android:id="@+id/imageView3"
            android:src="@drawable/demo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:battle="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_140"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/layout_8">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/layout_16">

            <ImageView
                android:layout_width="@dimen/layout_96"
                android:layout_height="@dimen/layout_96"
                android:src="@drawable/avatar_holder"
                android:layout_marginTop="@dimen/layout_8"
                android:id="@+id/user_avatar"/>

            <TextView
                android:layout_width="@dimen/layout_96"
                android:layout_height="@dimen/layout_32"
                android:layout_marginTop="@dimen/layout_8"
                android:text="OatOal"
                android:textAlignment="center"
                android:textAppearance="@style/NormalTextAccent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/layout_8"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/layout_8">

            <LinearLayout
                android:layout_width="@dimen/layout_180"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="@dimen/layout_96"
                    android:layout_height="@dimen/layout_32"
                    android:text="1.25M"
                    android:textSize="@dimen/coint_text_size"
                    android:textColor="@color/Gold"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/coin_number"/>

                <ImageView
                    android:layout_width="@dimen/layout_32"
                    android:layout_height="@dimen/layout_32"
                    android:src="@drawable/coin"
                    android:layout_marginRight="@dimen/layout_8"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_32"
                android:layout_marginTop="@dimen/layout_16"
                android:layout_marginLeft="@dimen/layout_16">

                <TextView
                    android:layout_width="@dimen/layout_128"
                    android:layout_height="@dimen/layout_32"
                    android:text="@string/expedition"
                    android:textAppearance="@style/NormalTextBlack"/>

                <TextView
                    android:layout_width="@dimen/layout_72"
                    android:layout_height="@dimen/layout_32"
                    android:textSize="@dimen/normal_less_text_size"
                    android:textColor="@color/BlackText"
                    android:text="762 trận"
                    android:id="@+id/total_battle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_32"
                android:layout_marginTop="@dimen/layout_16"
                android:layout_marginLeft="@dimen/layout_16">

                <TextView
                    android:layout_width="@dimen/layout_128"
                    android:layout_height="@dimen/layout_32"
                    android:text="@string/win_rate"
                    android:textAppearance="@style/NormalTextBlack"/>

                <TextView
                    android:layout_width="@dimen/layout_72"
                    android:layout_height="@dimen/layout_32"
                    android:textSize="@dimen/normal_less_text_size"
                    android:textColor="@color/BlackText"
                    android:text="69.69%"
                    android:id="@+id/win_rate"/>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/layout_96"
        android:layout_height="@dimen/layout_96"
        android:layout_gravity="center"
        android:src="@drawable/medal_sliver"/>

    <TextView
        android:layout_width="@dimen/layout_128"
        android:layout_height="@dimen/layout_32"
        android:text="BẠC A"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/appellation_text_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_2"
        android:layout_marginRight="@dimen/layout_64"
        android:layout_marginLeft="@dimen/layout_64"
        android:layout_marginTop="@dimen/layout_8"
        android:background="@color/colorAccent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_32"
        android:text="@string/battle_chain_2"
        android:textSize="@dimen/normal_less_text_size"
        android:textStyle="bold"
        android:textColor="@color/BlackText"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_8"
        android:id="@+id/battle_chain_text"/>

    <khoavin.sillylearningenglish.CustomView.BattleChainView
        android:layout_gravity="center"
        android:layout_width="@dimen/layout_180"
        android:layout_height="@dimen/layout_32"
        battle:itemWidth="@dimen/layout_12"
        battle:battleState="01123"
        battle:winColor="@color/Green"
        battle:failureColor="@color/Red"
        battle:contentPadding="@dimen/layout_12"
        battle:lockColor="@color/Grey"
        android:id="@+id/battle_chain"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/layout_32">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/layout_48">

            <ImageView
                android:layout_width="@dimen/layout_64"
                android:layout_height="@dimen/layout_64"
                android:src="@drawable/icon_find_battle"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/find_battle_button"/>

            <TextView
                android:layout_width="@dimen/layout_96"
                android:layout_height="@dimen/layout_32"
                android:text="@string/find_battle"
                android:textAppearance="@style/ActionButtonTitle"
                android:gravity="center"
                android:id="@+id/textView8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/layout_48">

            <ImageView
                android:layout_width="@dimen/layout_64"
                android:layout_height="@dimen/layout_64"
                android:src="@drawable/icon_history"
                android:layout_gravity="center"

                android:id="@+id/battle_history_button"/>
            <TextView
                android:layout_width="@dimen/layout_96"
                android:layout_height="@dimen/layout_32"
                android:text="@string/battle_history"
                android:textAppearance="@style/ActionButtonTitle"
                android:gravity="center"/>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>
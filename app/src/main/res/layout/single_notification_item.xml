<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/layout_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/singleItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_page_notify_border"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ranking_view_user_avatar"
            android:layout_toEndOf="@+id/ranking_view_user_avatar"
            android:layout_toRightOf="@+id/ranking_view_user_avatar"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user_avatar"
                    android:layout_width="@dimen/layout_32"
                    android:layout_height="@dimen/layout_32"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/layout_8"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar"
                    app:civ_border_color="#FFF"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_user_avatar"
                    android:layout_marginLeft="@dimen/layout_8"
                    android:layout_toEndOf="@+id/img_user_avatar"
                    android:layout_toRightOf="@+id/img_user_avatar"
                    android:text="Huỳnh Khoa Vin"
                    android:textColor="@color/Grey"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/img_user_avatar"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_marginStart="28dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/layout_8"
                        android:src="@drawable/ic_location"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="NewYork"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_clock" />

                    <TextView
                        android:id="@+id/post_time"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:text="8:13 PM"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_notify_content"
                    android:textColor="@color/BlackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_4"
                    android:text="Xin chào mọi người tôi vừa mở khóa bài học A ghost in love and other plays.Xin chào mọi người tôi vừa mở khóa bài học A ghost in love and other plays.Xin chào mọi người tôi vừa mở khóa bài học A ghost in love and other plays.Xin chào mọi người tôi vừa mở khóa bài học A ghost in love and other plays" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_36"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/btn_comment"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_comment"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/tv_CommentCount" />

                            <TextView
                                android:id="@+id/tv_CommentCount"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/Grey"></View>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/btn_like"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_like"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:id="@+id/tv_likeCount"
                                android:textStyle="bold"
                                android:textColor="@color/Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/btn_like" />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:battle="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/avatar_holder"
                android:layout_marginTop="5dp"
                android:id="@+id/user_avatar"/>

            <TextView
                android:layout_width="96dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="OatOal"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="@dimen/normal_text_size"
                android:textAlignment="center"
                android:id="@+id/user_name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="1.25M"
                    android:textSize="@dimen/coint_text_size"
                    android:textColor="@color/Gold"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/coin_number"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/coin"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="@string/expedition"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/BlackText"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:textSize="@dimen/normal_less_text_size"
                    android:textColor="@color/BlackText"
                    android:text="762 trận"
                    android:id="@+id/total_battle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="@string/win_rate"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/BlackText"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:textSize="@dimen/normal_less_text_size"
                    android:textColor="@color/BlackText"
                    android:text="69.69%"
                    android:id="@+id/win_rate"/>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:src="@drawable/medal_sliver"/>

    <TextView
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:text="BẠC A"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/appellation_text_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/battle_chain_2"
        android:textSize="@dimen/normal_less_text_size"
        android:textStyle="bold"
        android:textColor="@color/BlackText"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:id="@+id/battle_chain"/>

    <khoavin.sillylearningenglish.CustomView.BattleChainView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        battle:itemWidth="10dp"
        battle:battleState="01233"
        battle:winColor="@color/Green"
        battle:failureColor="@color/Red"
        battle:contentPadding="30dp"
        battle:lockColor="@color/Grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="50dp">
            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/icon_find_battle"
                android:id="@+id/find_battle_button"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/find_battle"
                android:textStyle="bold"
                android:textColor="@color/Red"
                android:gravity="center"
                android:textSize="@dimen/normal_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/icon_history"
                android:id="@+id/battle_history_button"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/battle_history"
                android:textStyle="bold"
                android:textColor="@color/Red"
                android:gravity="center"
                android:textSize="@dimen/normal_text_size"/>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>
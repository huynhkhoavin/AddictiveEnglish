<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        style="@style/NormalTextAccent"
        android:gravity="center"
        android:text="@string/result_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_300"
        android:layout_marginTop="15dp"
        android:background="@drawable/answer_box_border"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/answer_1st"
            style="@style/NormalTextBlack"
            android:id="@+id/question_title"/>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_listen_72"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:id="@+id/icon_playing"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NormalTextBlack"
            android:text="What are they talking about?"
            android:id="@+id/question"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: A music"
            style="@style/NormalTextBlack"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/answer_a"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B: A music"
            style="@style/NormalTextBlack"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/answer_b"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_28"
            android:paddingEnd="@dimen/layout_8"
            android:paddingStart="@dimen/layout_8"
            android:weightSum="3">

            <TextView
                style="@style/SmallTextBlackBold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/result_sumary" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    style="@style/SmallTextBlackBold"
                    android:layout_width="@dimen/layout_64"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/result_total_time" />

                <TextView
                    style="@style/SmallTextBlackBold"
                    android:layout_width="@dimen/layout_64"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="04:25"
                    android:id="@+id/total_time"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_72"
            android:paddingEnd="@dimen/layout_12"
            android:paddingStart="@dimen/layout_12"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/layout_64"
                    android:layout_height="@dimen/layout_64"
                    android:layout_gravity="center"
                    android:background="@drawable/true_icon"
                    android:id="@+id/your_answer_1"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/layout_64"
                    android:layout_height="@dimen/layout_64"
                    android:layout_gravity="center"
                    android:background="@drawable/true_icon"
                    android:id="@+id/your_answer_2"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/layout_64"
                    android:layout_height="@dimen/layout_64"
                    android:layout_gravity="center"
                    android:background="@drawable/true_icon"
                    android:id="@+id/your_answer_3"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/layout_64"
                    android:layout_height="@dimen/layout_64"
                    android:layout_gravity="center"
                    android:background="@drawable/true_icon"
                    android:id="@+id/your_answer_4"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/layout_64"
                    android:layout_height="@dimen/layout_64"
                    android:layout_gravity="center"
                    android:background="@drawable/false_icon"
                    android:id="@+id/your_answer_5"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/find_battle_button"
                    android:layout_width="@dimen/layout_64"
                    android:layout_height="@dimen/layout_64"
                    android:clickable="true"
                    android:src="@drawable/icon_find_battle" />

                <TextView
                    style="@style/SmallTextBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/change_enemy"
                    android:textColor="@color/Red" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/go_home_button"
                    android:layout_width="@dimen/layout_64"
                    android:layout_height="@dimen/layout_64"
                    android:src="@drawable/icon_history"
                    android:clickable="true"/>

                <TextView
                    style="@style/SmallTextBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/go_home"
                    android:textColor="@color/Red" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
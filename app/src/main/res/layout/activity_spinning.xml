<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48"
        android:gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="@dimen/layout_8"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back"
            android:layout_width="@dimen/layout_32"
            android:layout_height="@dimen/layout_32" />
        <TextView
            android:id="@+id/lessonTitle"
            android:textColor="@color/colorAccent"
            android:text="LUCKY SPINNING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/wheel"
        android:src="@drawable/spinning_wheel"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_width="@dimen/layout_320"
        android:layout_height="@dimen/layout_320" />
    <ImageView
        android:id="@+id/spinning_needle"
        android:src="@drawable/spinning_needle"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="90dp"
        android:layout_alignTop="@+id/wheel"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
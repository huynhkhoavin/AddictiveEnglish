<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_240"
        android:padding="20dp"
        android:layout_margin="5dp"
        android:background="@drawable/answer_box_border"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:textColor="@color/BlackText"
                android:text="1234."
                android:gravity="center"
                android:id="@+id/rank_position"/>

            <ImageView
                android:layout_width="@dimen/layout_72"
                android:layout_height="@dimen/layout_72"
                android:src="@drawable/avatar_holder"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:id="@+id/user_avatar"/>

            <LinearLayout
                android:layout_width="@dimen/layout_180"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAppearance="@style/NormalTextBlack"
                    android:text="OatOal"
                    android:gravity="center"
                    android:id="@+id/user_name"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/normal_less_text_size"
                        android:text="Tỉ lệ thắng:"
                        android:textColor="@color/BlackText"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/normal_less_text_size"
                        android:text="69,966%"
                        android:textStyle="bold"
                        android:textColor="@color/BlackText"
                        android:id="@+id/win_rate"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/layout_72"
                    android:layout_height="@dimen/layout_72"
                    android:src="@drawable/medal_gold"
                    android:layout_gravity="center"
                    android:id="@+id/user_medal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="@dimen/appellation_text_size"
                    android:gravity="center"
                    android:text="VÀNG A"
                    android:id="@+id/user_rank"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/layout_96"
                android:layout_height="match_parent"
                android:background="@drawable/answer_box_border"
                android:text="Kết bạn"
                android:textAllCaps="false"
                android:textSize="@dimen/normal_text_size"
                android:id="@+id/button_add_friend"/>

            <Button
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/layout_96"
                android:layout_height="match_parent"
                android:background="@drawable/answer_box_border"
                android:text="Thách đấu"
                android:textAllCaps="false"
                android:textSize="@dimen/normal_text_size"
                android:id="@+id/button_challenge"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:weightSum="2">

        <Button
            android:layout_weight="1"
            android:layout_width="@dimen/layout_96"
            android:layout_height="match_parent"
            android:background="@drawable/tab_left_active"
            android:text="Thế giới"
            android:textAllCaps="false"
            android:textSize="@dimen/normal_text_size"
            android:id="@+id/world_ranking"/>

        <Button
            android:layout_weight="1"
            android:layout_width="@dimen/layout_96"
            android:layout_height="match_parent"
            android:background="@drawable/tab_right_deactive"
            android:text="Bạn bè"
            android:textAllCaps="false"
            android:textSize="@dimen/normal_text_size"
            android:id="@+id/friend_ranking"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ranking_global_rank"
        android:layout_marginTop="@dimen/layout_8"
        android:layout_marginLeft="@dimen/layout_8"
        android:layout_marginRight="@dimen/layout_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_240"
        android:background="@drawable/grey_border"
        android:visibility="gone">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ranking_friend_rank"
        android:layout_marginTop="@dimen/layout_8"
        android:layout_marginLeft="@dimen/layout_8"
        android:layout_marginRight="@dimen/layout_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_240"
        android:background="@drawable/grey_border">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
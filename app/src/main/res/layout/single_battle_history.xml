<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_history"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_115"
    android:layout_marginBottom="@dimen/layout_4"
    android:paddingBottom="@dimen/layout_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/color_facebook"
            android:layout_marginTop="@dimen/layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 ngày trước."
            android:textAlignment="textEnd"
            android:textSize="@dimen/text_10dp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/layout_10"
            android:id="@+id/history_date_create"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.2">

                <LinearLayout
                    android:layout_width="@dimen/layout_72"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/layout_5">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="@dimen/layout_5"
                        android:layout_width="@dimen/layout_55"
                        android:layout_height="@dimen/layout_55"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar"
                        android:id="@+id/history_user_avatar"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_24"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="OatOal"
                        android:textColor="@color/color_belize_hole"
                        android:textSize="@dimen/text_12dp"
                        android:textStyle="bold"
                        android:id="@+id/history_user_name"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_72"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_32"
                        android:text="Số câu đúng: 5"
                        android:textSize="@dimen/text_10dp"
                        android:textStyle="bold"
                        android:id="@+id/history_user_true_answer"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_32"
                        android:text="Thời gian: 03:15"
                        android:textSize="@dimen/text_10dp"
                        android:textStyle="bold"
                        android:id="@+id/history_user_total_time"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/history_victory_state"
                    android:layout_width="@dimen/layout_55"
                    android:layout_height="@dimen/layout_55"
                    android:layout_marginLeft="@dimen/layout_2"
                    android:layout_marginRight="@dimen/layout_2"
                    android:background="@drawable/result_true_answer"
                    android:clickable="false"
                    android:text="Win"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/history_failure_state"
                    android:layout_width="@dimen/layout_55"
                    android:layout_height="@dimen/layout_55"
                    android:layout_marginLeft="@dimen/layout_2"
                    android:layout_marginRight="@dimen/layout_2"
                    android:background="@drawable/result_wrong_answer"
                    android:clickable="false"
                    android:text="Lost"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:layout_marginTop="@dimen/layout_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_17dp"
                    android:textColor="@color/authui_colorAccent"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.2"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="@dimen/layout_72"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_32"
                        android:text="Số câu đúng: 4"
                        android:textSize="@dimen/text_10dp"
                        android:textStyle="bold"
                        android:id="@+id/history_enemy_true_answer"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_32"
                        android:text="Answer times: 05:50"
                        android:textSize="@dimen/text_10dp"
                        android:textStyle="bold"
                        android:id="@+id/history_enemy_total_time"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_72"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/layout_5">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="@dimen/layout_5"
                        android:id="@+id/history_enemy_avatar"
                        android:layout_width="@dimen/layout_55"
                        android:layout_height="@dimen/layout_55"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar"/>

                    <TextView
                        android:id="@+id/history_enemy_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_24"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="ThinhNV"
                        android:textColor="@color/Red"
                        android:textSize="@dimen/text_12dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
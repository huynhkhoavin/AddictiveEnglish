<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_240"
        android:layout_margin="5dp"
        android:background="@drawable/answer_box_border"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ranking_view_rank_position"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="1234."
                android:textColor="@color/BlackText" />

            <ImageView
                android:id="@+id/ranking_view_user_avatar"
                android:layout_width="@dimen/layout_72"
                android:layout_height="@dimen/layout_72"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/avatar_holder" />

            <LinearLayout
                android:layout_width="@dimen/layout_180"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ranking_view_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="OatOal"
                    android:textAppearance="@style/NormalTextBlack" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:text="Tỉ lệ thắng:"
                        android:textColor="@color/BlackText"
                        android:textSize="@dimen/normal_less_text_size" />

                    <TextView
                        android:id="@+id/ranking_view_win_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="69,966%"
                        android:textColor="@color/BlackText"
                        android:textSize="@dimen/normal_less_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ranking_view_user_medal"
                    android:layout_width="@dimen/layout_72"
                    android:layout_height="@dimen/layout_72"
                    android:layout_gravity="center"
                    android:src="@drawable/medal_gold" />

                <TextView
                    android:id="@+id/ranking_view_user_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="VÀNG A"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/appellation_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ranking_view_button_add_friend"
                android:layout_width="@dimen/layout_96"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/answer_box_border"
                android:text="Kết bạn"
                android:textAllCaps="false"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/ranking_view_button_challenge"
                android:layout_width="@dimen/layout_96"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/answer_box_border"
                android:text="Thách đấu"
                android:textAllCaps="false"
                android:textSize="@dimen/normal_text_size" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:weightSum="2">

        <Button
            android:layout_weight="1"
            android:layout_width="@dimen/layout_96"
            android:layout_height="match_parent"
            android:background="@drawable/tab_left_in_active"
            android:text="Thế giới"
            android:textAllCaps="false"
            android:textSize="@dimen/normal_text_size"
            android:id="@+id/ranking_view_button_global_none_selected"/>


        <Button
            android:id="@+id/ranking_view_button_global_selected"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="@dimen/layout_96"
            android:layout_height="match_parent"
            android:background="@drawable/tab_left_active"
            android:text="Thế giới"
            android:textAllCaps="false"
            android:textSize="@dimen/normal_text_size"
            android:clickable="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="@dimen/layout_96"
            android:layout_height="match_parent"
            android:background="@drawable/tab_right_in_active"
            android:text="Bạn bè"
            android:textAllCaps="false"
            android:textSize="@dimen/normal_text_size"
            android:id="@+id/ranking_view_button_friend_none_selected"
            android:visibility="gone"/>

        <Button
            android:layout_weight="1"
            android:layout_width="@dimen/layout_96"
            android:layout_height="match_parent"
            android:background="@drawable/tab_right_active"
            android:text="Bạn bè"
            android:textAllCaps="false"
            android:textSize="@dimen/normal_text_size"
            android:id="@+id/ranking_view_button_friend_selected"
            android:clickable="false"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ranking_view_global_rank_list_view"
        android:layout_marginTop="@dimen/layout_8"
        android:layout_marginLeft="@dimen/layout_8"
        android:layout_marginRight="@dimen/layout_8"
        android:layout_marginBottom="@dimen/layout_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ranking_view_friend_rank_list_view"
        android:layout_marginTop="@dimen/layout_8"
        android:layout_marginLeft="@dimen/layout_8"
        android:layout_marginRight="@dimen/layout_8"
        android:layout_marginBottom="@dimen/layout_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
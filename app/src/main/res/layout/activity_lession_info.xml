<?xml version="1.0" encoding="utf-8"?>

    <!-- MAIN CONTENT -->
<LinearLayout xmlns:battle="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="144dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@color/colorPrimary2"
                    android:layout_marginRight="5dp"
                    android:id="@+id/lession_image"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/BlackText"
                        android:textStyle="bold"
                        android:textSize="9pt"
                        android:text="Walden"
                        android:id="@+id/lession_name"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="7pt"
                        android:textColor="@color/Grey"
                        android:text = "Henry David Thoreau (1817-18622)"
                        android:id="@+id/author_name"/>

                    <khoavin.sillylearningenglish.CustomView.BattleChainView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        battle:itemWidth="7dp"
                        battle:battleState="33333"
                        battle:winColor="@color/Green"
                        battle:failureColor="@color/Red"
                        battle:contentPadding="15dp"
                        battle:lockColor="@color/Gold"
                        android:id="@+id/battle_chain"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:text="2.145"
                        android:gravity="center_vertical"
                        android:textSize="6pt"
                        android:textStyle="bold"
                        android:textColor="@color/BlackText"
                        android:id="@+id/price"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/coin"
                        android:layout_gravity="center"/>
                </LinearLayout>


                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/answer_box_border"
                    android:text="Đọc"
                    android:textAllCaps="false"
                    android:textSize="@dimen/normal_text_size"
                    android:visibility="gone"
                    android:id="@+id/buy_button"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/answer_box_border"
                    android:text="Nghe"
                    android:textAllCaps="false"
                    android:textSize="@dimen/big_text_12pt"
                    android:id="@+id/listen_button"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAppearance="@style/NormalTextBlack"
                    android:text="Description:"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/big_text_12pt"
                    android:textColor="@color/Grey"
                    android:text="Two years, two months and two days! this is what form..."
                    android:id="@+id/description"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAppearance="@style/NormalTextBlack"
                    android:text="READ MORE"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAppearance="@style/NormalTextBlack"
                android:text="RATE"
                android:gravity="center"/>

            <RatingBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/rating_bar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8.5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/toolbar_border"
                android:orientation="horizontal"
                android:onClick="OpenLessonDetailClick">
                <ImageView
                    android:layout_width="@dimen/image_size72"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/demo"
                    android:id="@+id/imageView2" />

                <Button
                    android:layout_width="@dimen/layout_heigh_48"
                    android:layout_height="@dimen/layout_heigh_48"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_play"
                    android:id="@+id/button2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/WhiteText"
                        android:textStyle="bold"
                        android:text="The Adventure of Alice"
                        android:id="@+id/textView3"
                        android:layout_alignTop="@+id/button2"
                        android:layout_toEndOf="@+id/imageView2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/WhiteText"
                        android:text="Charles Lamb"
                        android:textStyle="bold"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/textView3"
                        android:layout_alignStart="@+id/textView3" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
